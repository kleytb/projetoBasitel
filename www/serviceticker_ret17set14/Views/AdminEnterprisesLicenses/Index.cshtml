@model IEnumerable<MzServiceTicker.DataViewModels.LicenseViewModel>


<div class="row">


    @if (Model.Count() == 0)
    {
        <p>@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.NoData")</p>
    }
    else
    {
        WebGrid grid = new WebGrid(source: Model, rowsPerPage: 25, canPage: true, canSort: true, defaultSort: "EnterpriseEIN");
    
        @grid.Pager()

        @grid.GetHtml(tableStyle: "table table-striped table-bordered table-hover",
        columns: grid.Columns(
            grid.Column("EnterpriseEIN", @MzCommon.MessageHandler.MessageGetter.GetMessage("Object.License.EnterpriseEIN"), canSort: true),
            grid.Column("ModuleName", @MzCommon.MessageHandler.MessageGetter.GetMessage("Object.License.ModuleName"), canSort: true),
            grid.Column(null, @MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.Action"), format: (item) => Html.ActionLink(" ", "Details", Model.FirstOrDefault(record => record.Id == item.Id), new { @class = "glyphicon glyphicon-list", title = @MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.Detail") }))
        ))

        <div class="pagination pagination-small pagination-right">
            @grid.Pager(mode: WebGridPagerModes.All)
        </div>
    }

</div>
