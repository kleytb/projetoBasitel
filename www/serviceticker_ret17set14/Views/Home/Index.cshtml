@model MzServiceTicker.ViewModels.HomeViewModel

<div class="col-md-12">

    <br />

    <div class="col-md-4">
        <img src='@Url.Content("~/Content/image/mz.logo.serviceticker.jpg")' />
    </div>

    <div class="col-md-8 pull-right">
        <form class="form-inline pull-right" role="form" method="post">
            <div class="row">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.LandingPage.LoginInput")">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.LandingPage.PasswordInput")">
                </div>
                <button type="submit" class="btn btn-default">@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.LandingPage.LoginButton")</button>
            </div>
            <div class="row">
                @if (!String.IsNullOrEmpty(Model.LoginMessage))
                {
                    <div class="label label-danger label-xs">
                        @Model.LoginMessage
                    </div>
                }
            </div>
        </form>

    </div>
</div>

<div class="col-md-12">
    <br />

    <div class="jumbotron">
        <img src='@Url.Content("~/Content/image/mz.landingpagepicture.jpg")' />
    </div>
</div>
<div class="col-md-4">
    <p></p>
</div>
<div class="col-md-4">
    <p>@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.LandingPage.Phone")</p>
    <p>@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.LandingPage.EMail")</p>
</div>
<div class="col-md-4">
    <img src='@Url.Content("~/Content/image/mz.logo.mezasoft.jpg")' />
</div>


