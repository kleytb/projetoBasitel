@model MzServiceTicker.DataViewModels.UserContractViewModel

<div class="col-md-12">

    <table class="table table-striped table-hover">
        <tr>
            <td>
                @Html.Label(MzCommon.MessageHandler.MessageGetter.GetMessage("Object.UserContract.UserUsername"))
            </td>
            <td>
                @Html.DisplayFor(model => model.UserUsername)
            </td>
        </tr>

        <tr>
            <td class="col-md-2"></td>
            <td></td>
        </tr>
    </table>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        <div style="color: red">@Html.ValidationSummary()</div>

        <div class="form-group">
            @Html.Label(@MzCommon.MessageHandler.MessageGetter.GetMessage("Object.UserContract.ContractCode"))
            @Html.DropDownListFor(model => model.ContractId, Model.ContractCodes, "--- Selecione uma código de contrato ---", new { @class = "form-control" }))
            @Html.ValidationMessageFor(model => model.ContractName, null, new { @style = "color: red" })
        </div>
        
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.EnterpriseId)
        @Html.HiddenFor(model => model.ContractName)
        @Html.HiddenFor(model => model.ContractCode)
        @Html.HiddenFor(model => model.UserUsername)

        <br />

        <p>@Model.TrackingString</p>

        <br />


        @Html.ActionLink(MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.Return"), "Index", new { idSelectedEnterprise = Model.EnterpriseId, idSelectedUser = Model.UserId }, new { @class = "btn btn-primary" })
        <input type='submit' value='@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.Save")' class='btn btn-primary' />
    }

    <br />
</div>
