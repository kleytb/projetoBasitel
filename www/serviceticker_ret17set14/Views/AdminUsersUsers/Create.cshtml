        </div>

        <div class="form-group">
            @Html.Label(@MzCommon.MessageHandler.MessageGetter.GetMessage("Object.User.Password"))
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = @MzCommon.MessageHandler.MessageGetter.GetMessage("Object.User.Password.Placeholder"), type = "password" })
            @Html.ValidationMessageFor(model => model.Password, null, new { @style = "color: red" })
        </div>
    
        <div class="form-group">
            @Html.Label(@MzCommon.MessageHandler.MessageGetter.GetMessage("Object.User.PasswordConfirmation"))
            @Html.TextBoxFor(model => model.PasswordConfirmation, new { @class = "form-control", placeholder = @MzCommon.MessageHandler.MessageGetter.GetMessage("Object.User.PasswordConfirmation.Placeholder"), type = "password" })
            @Html.ValidationMessageFor(model => model.PasswordConfirmation, null, new { @style = "color: red" })
        </div>
    
        @Html.HiddenFor(model => model.EnterpriseId)

        @Html.ActionLink(@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.Return"), "Index", new { idSelectedEnterprise = Model.EnterpriseId }, new { @class = "btn btn-primary" })
        <input type='submit' value='@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.Save")' class='btn btn-primary' />
    }

    <br />
</div>

