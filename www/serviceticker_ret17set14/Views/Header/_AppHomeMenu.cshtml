@model MzServiceTicker.ViewModels.HeaderViewModel

<nav class="navbar navbar-default" role="navigation">

    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainnavbar">
            <span class="sr-only">@MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.AppHome.ShowMenu")</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href='@Url.Action("ChangeCurrentModule", "AppHome", new { moduleKey = "User" })'>
            <span class="glyphicon glyphicon-home"></span>
            Home </a>

    </div>

    <div class="collapse navbar-collapse" id="mainnavbar">
        <ul class="nav navbar-nav">

            @{foreach (var menu in Model.NavigationMenu.MenuBar)
              {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@menu.Name<b class="caret"></b></a>

                    @if (menu.NavScreens.Count() > 0)
                    {
                        <ul class="dropdown-menu">
                            @foreach (var screen in menu.NavScreens)
                            {
                                <li>
                                    @Html.ActionLink(screen.Title, "Index", screen.Key.Replace(".", ""), new { screenKey = screen.Key }, null)
                                </li>
                            }
                        </ul>
                    }
                </li>
              }
            }
        </ul>
    </div>

</nav>
