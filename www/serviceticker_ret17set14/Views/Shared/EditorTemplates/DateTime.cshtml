@model DateTime?
@Html.TextBox("", Model.HasValue ? String.Format("{0:dd/MM/yyyy HH:mm}", Model.Value) : String.Empty, new { @class = "form-control" })
<script type="text/javascript">
    $(function () {
        // target only the input in this editor template
        $('#@Html.IdForModel()').datetimepicker({
            language: 'pt'
        });
    });
</script>
