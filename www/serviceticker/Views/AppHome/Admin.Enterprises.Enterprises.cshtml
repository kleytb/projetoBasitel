@model IEnumerable<MzServiceTicker.DataViewModels.EnterpriseViewModel>

@if (Model.Count() == 0)
{
    <p>Não existem itens cadastrados para esta seleção.</p>
}
else
{
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 25, canPage: true, canSort: true, defaultSort: "Name");
    
    @grid.Pager(mode: WebGridPagerModes.All)

    @grid.GetHtml(tableStyle: "table table-striped table-bordered table-hover table-condensed",
        columns: grid.Columns(
            grid.Column("Name", "NOME", canSort: true),
            grid.Column("EIN", "IDENTIFICADOR", canSort: true),
            grid.Column("Description", "DESCRIÇÃO", canSort: true),
            grid.Column("Enabled", "HABILITADO", canSort: true, format: item => item.Enabled ?
                            Html.Raw("<img src='Content/image/mz.icon.ok.jpg'/>") :
                            Html.Raw("<img src='Content/image/mz.icon.notok.jpg'/>")),
            grid.Column(null, @MzCommon.MessageHandler.MessageGetter.GetMessage("Screen.Action"), format: (item) => Html.ActionLink(" ", "Edit", Model.FirstOrDefault(record => record.Id == item.Id), new { @class = "glyphicon glyphicon-edit", title = "Editar" }))
        ))

    <div class="pagination pagination-small pagination-right">
        @grid.Pager(mode: WebGridPagerModes.All)
    </div>
}


